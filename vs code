#include<stdio.h>

main(){

float prova1, prova2, prova3, media;

printf("\nDigite a nota da prova 1:");
scanf("%f", &prova1);

printf("\nDigite a nota da prova 2:");
scanf("%f", &prova2);

printf("\nDigite a nota da prova 3:");
scanf("%f", &prova3);

media = (prova1 + prova2 + (prova3 *2))/3;

if(media < 7){
   
   printf("\nReprovado");

}else if( media >= 7){
   
   printf("\nAprovado");

}

printf("\nSegue o roteiro");




}
